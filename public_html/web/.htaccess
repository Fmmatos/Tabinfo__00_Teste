### PROTEGER ARQUIVOS SENSÍVEIS
	<FilesMatch "(^\.env$|^\.git.*$|^\.ht(access|passwd)$|^(composer|package)\.(json|lock)$|^(phpunit\.xml|artisan|server\.php)$|.*\.(env|inc|tpl|h|ihtml|ini|conf|class|bin|spd|theme|module|sql)$)">
		<IfModule mod_authz_core.c>
			Require all denied
		</IfModule>
		<IfModule !mod_authz_core.c>
			Order deny,allow
			Deny from all
		</IfModule>
	</FilesMatch>
